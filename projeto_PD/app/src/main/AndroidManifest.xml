<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.mytasks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".controller.activity.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.activity.activity.PresentationActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activity.activity.CategoriesActivity"
            android:label="@string/tv_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.activity.activity.NewCategoryActivity"
            android:label="@string/name_activity_new_category"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".controller.activity.activity.TasksActivity"
            android:label="@string/title_activity_tasks"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".controller.activity.activity.AddNewTaskActivity"
            android:label="New Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.activity.activity.EditTaskActivity"
            android:label="@string/editing_activity_activity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".controller.activity.activity.EditCategoryActivity"
            android:label="@string/editing_category_activity"
            android:theme="@style/AppTheme" />
        <activity android:name=".controller.activity.activity.ActivityActivity" />
        <activity
            android:name=".controller.activity.activity.BaseActivity"
            android:label="@string/base_activity" />
        <activity
            android:name=".controller.activity.activity.NewEventActivity"
            android:label="New Event"
            android:theme="@style/AppTheme" />
        <activity android:name=".graphics.LineGraphicActivity" />
        <activity android:name=".controller.activity.activity.EventsActivity"/>
    </application>

</manifest>