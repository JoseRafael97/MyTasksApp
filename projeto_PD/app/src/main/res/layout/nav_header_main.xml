<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/background"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_profile1"
        android:layout_x="13dp"
        android:layout_y="27dp"
        android:layout_alignTop="@+id/nameApp2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38px"
        android:text="@string/nav_name"
        android:layout_below="@+id/nameApp2"
        android:layout_alignStart="@+id/nameApp2"
        android:layout_x="73dp"
        android:layout_y="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/nav_sigle"
        android:textSize="48px"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/nameApp2"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="26dp"
        android:layout_x="13dp"
        android:layout_y="100dp" />

</RelativeLayout>
