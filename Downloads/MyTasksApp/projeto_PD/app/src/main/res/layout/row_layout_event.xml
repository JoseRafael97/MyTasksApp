<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_event"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_label_date_initial_event"
            android:text="@string/initial_date_event"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/tv_event_name"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_date_initial_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/tv_label_date_initial_event"
            android:layout_toEndOf="@+id/tv_label_date_initial_event" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_label_deadline_home"
            android:text="@string/final_date_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_label_date_initial_event"/>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_final_date_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:paddingEnd="2dp"
            android:layout_alignBaseline="@+id/tv_label_deadline_home"
            android:layout_alignBottom="@+id/tv_label_deadline_home"
            android:layout_toEndOf="@+id/tv_label_deadline_home" />

    </RelativeLayout>
</android.support.v7.widget.CardView>